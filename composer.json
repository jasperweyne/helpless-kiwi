{
    "type": "project",
    "license": "Apache-2.0",
    "require": {
        "php": "^7.1.3",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "dg/mysql-dump": "1.5.1",
        "doctrine/doctrine-migrations-bundle": "2.2",
        "doctrine/migrations": "2.2",
        "drenso/symfony-oidc-bundle": "1.11.3",
        "overblog/graphql-bundle": "0.13.6",
        "sensio/framework-extra-bundle": "5.6.1",
        "symfony/apache-pack": "^1.0",
        "symfony/asset": "^4.0",
        "symfony/console": "^4.0",
        "symfony/dotenv": "^4.0",
        "symfony/expression-language": "^4.0",
        "symfony/flex": "^1.1",
        "symfony/form": "^4.0",
        "symfony/framework-bundle": "^4.0",
        "symfony/monolog-bundle": "^3.1",
        "symfony/orm-pack": "1.0.7",
        "symfony/process": "^4.0",
        "symfony/security-bundle": "^4.0",
        "symfony/serializer-pack": "*",
        "symfony/swiftmailer-bundle": "^3.1",
        "symfony/translation": "^4.0",
        "symfony/twig-bundle": "^4.0",
        "symfony/validator": "^4.0",
        "symfony/web-link": "^4.0",
        "symfony/webpack-encore-bundle": "^1.8",
        "symfony/yaml": "^4.0",
        "twig/extra-bundle": "3.3.1",
        "twig/intl-extra": "3.3.0",
        "twig/twig": "2.14.11",
        "vich/uploader-bundle": "1.17.1",
        "welp/ical-bundle": "1.0.1"
    },
    "require-dev": {
        "ext-sqlite3": "*",
        "ext-xdebug": "*",
        "dama/doctrine-test-bundle": "6.5.0",
        "doctrine/doctrine-fixtures-bundle": "3.4.0",
        "friendsofphp/php-cs-fixer": "2.19.0",
        "liip/test-fixtures-bundle": "1.11.2",
        "overblog/graphiql-bundle": "0.2.1",
        "phpstan/extension-installer": "1.1.0",
        "phpstan/phpstan": "^1.4",
        "phpstan/phpstan-doctrine": "^1.2",
        "phpstan/phpstan-phpunit": "^1.0",
        "phpstan/phpstan-strict-rules": "^1.1",
        "phpstan/phpstan-symfony": "^1.1",
        "symfony/css-selector": "4.4.*",
        "symfony/debug-pack": "*",
        "symfony/maker-bundle": "^1.0",
        "symfony/profiler-pack": "*",
        "symfony/test-pack": "*",
        "symfony/web-server-bundle": "^4.0"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true,
        "allow-plugins": {
            "ocramius/package-versions": true,
            "symfony/flex": true,
            "phpstan/extension-installer": true
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "Tests\\Helper\\": "tests/Helper/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "replace": {
        "paragonie/random_compat": "2.*",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "php .hooks/install.php",
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "test": [
            "php bin/phpunit --testdox"
        ],
        "lint": [
            "php-cs-fixer fix src --verbose --dry-run --show-progress=none"
        ],
        "fix": [
            "php-cs-fixer fix src"
        ],
        "analyse": [
            "./vendor/bin/phpstan analyse --memory-limit 2G"
        ],
        "db-rebuild": [
            "php bin/console doctrine:database:drop --force --if-exists",
            "php bin/console doctrine:database:create",
            "php bin/console doctrine:migrations:migrate -n"
        ],
        "db-rebuild-dev": [
            "@db-rebuild",
            "php bin/console app:create-account user@kiwi.nl user user",
            "php bin/console app:create-account --admin admin@kiwi.nl admin admin"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "4.4.*"
        },
        "hooks": {
            "pre-commit": [
                ".hooks/pre-commit"
            ]
        }
    }
}
