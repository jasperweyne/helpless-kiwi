{% extends 'admin/layout.html.twig' %}

{% if page_title is not defined %}
    {% set page_title = 'Afbeeldingen' %}
    
    {% block top %}
        {% embed 'admin/listview.html.twig' %}
            {% set resultcount = photos|length %}
            
            {% block buttons %}
                <a href="{{ path("admin_gallery_new") }} ">Nieuw</a>
            {% endblock %}
        {% endembed %}
    {% endblock %}
{% endif %}

{% block body %}
    <div class="table">
        <table>
            <thead>
                <tr>
                    <th>Afbeelding</th>
                </tr>
            </thead>
            <tbody>
            {% for photo in photos %}
                <tr>
                    <td><a href="{{ path("admin_gallery_show", { 'id': photo.id }) }}">Afbeelding</a></td>
                </tr>
            {% else %}
                <tr>
                    <td>Geen afbeeldingen.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
