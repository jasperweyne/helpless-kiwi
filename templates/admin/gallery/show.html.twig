{% extends 'admin/layout.html.twig' %}

{% if page_title is not defined %}
    {% set page_title = 'Afbeelding' %}
    
    {% block buttons %}
        <a href="{{ path('admin_gallery_edit', { 'id': photo.id }) }}">Bewerken</a>
        <a href="{{ path('admin_gallery_delete', { 'id': photo.id }) }}">Verwijderen</a>
    {% endblock %}
{% endif %}

{% block body %}
    <div class="table">
        <table>
            <tbody>
                <tr>
                    <th>Afbeelding</th>
                    <td>{% if photo.image.name %}<img src="{{ vich_uploader_asset(photo, 'imageFile') }}" />{% else %}Geen afbeelding.{% endif %}</td>
                </tr>
            </tbody>
        </table>
    </div>
{% endblock %}
