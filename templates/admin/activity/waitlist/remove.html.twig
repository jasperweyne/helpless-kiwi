{% extends 'admin/layout.html.twig' %}

{% set page_title = waitlist.person.canonical ?? 'Onbekend' ~ ' afmelden van wachtlijst voor ' ~ waitlist.option.activity.name  %}

{% block body %}
    <div class="form">
        {{ form_start(form) }}
        <div>
            <p>Weet je dit zeker?</p>
        </div>
        {{ form_widget(form) }}
            <div class="button-group">
                <button type="submit">Ja, meld af</button>
                <a href="{{ path('admin_activity_show', { 'id': waitlist.option.activity.id }) }}">Annuleren</a>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
