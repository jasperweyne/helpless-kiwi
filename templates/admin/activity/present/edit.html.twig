{% extends 'admin/layout.html.twig' %}

{% if page_title is not defined %}
    {% set page_title = 'Registeer aanwezigheid voor ' ~ activity.name%}
{% endif %}

{% block body %}
    <div class="form">
        {{ form_start(form) }}
        <table>
            <thead>
                <th>Name</th>
                <th>Aanwezigheid</th>
            </thead>
            <tbody>
                {% for registration in form.currentRegistrations %}
                    {% if registration.count != 0 %}
                        <tr>
                            <td>{{ form_label(registration) }}</td>
                            <td>{{ form_widget(registration) }}</td>
                        </tr>
                    {% endif %}
                {% endfor %}
            </tbody>
            </table>
            <div class="button-group">
                <button type="submit" class="rounded px-4 py-3 text-white bg-green-500 inline-block">Opslaan</button>
                <a href="{{ path('admin_activity_present_set', { 'activity': activity.id }) }}" class="rounded px-4 py-3 text-white bg-gray-500 inline-block">Aantal instellen</a>
                <a href="{{ path("admin_activity_show", { 'activity': activity.id }) }}" class="rounded px-4 py-3 text-white bg-gray-500 inline-block">Terug</a>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
