{% extends 'admin/layout.html.twig' %}

{% if page_title is not defined %}
    {% set page_title = 'Registreer aantal aanwezigen voor ' ~ activity.name%}
{% endif %}

{% block body %}
    <div class="form">
        {{ form_start(form) }}
            {{ form_widget(form) }}
            <div class="button-group">
                <button type="submit" class="rounded px-4 py-3 text-white bg-green-500 inline-block">Opslaan</button>
                {% if activity.present is not null %}
                <a href="{{ path('admin_activity_present_reset', { 'activity': activity.id }) }}" class="rounded px-4 py-3 text-white bg-gray-500 inline-block">Waarde verwijderen</a>
                {% endif %}
                <a href="{{ path("admin_activity_show", { 'activity': activity.id }) }}" class="rounded px-4 py-3 text-white bg-gray-500 inline-block">Terug</a>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}