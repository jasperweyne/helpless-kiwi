{% extends 'admin/layout.html.twig' %}

{% if page_title is not defined %}
    {% set page_title = option.name ~ 'bewerken' %}
{% endif %}

{% block body %}
    <div class="form">
        {{ form_start(form) }}
            {{ form_widget(form) }}
            <div class="button-group">
                <button type="submit" class="button add icon">Opslaan</button>
                <a href="{{ path('admin_activity_show', { 'id': option.activity.id }) }}" class="button secondary">Annuleren</a>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
