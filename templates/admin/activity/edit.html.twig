{% extends 'admin/layout.html.twig' %}

{% set page_title = 'Bewerk ' ~ activity.name %}

{% block body %}
    <div class="form">
        {{ form_start(form) }}
            {{ form_widget(form) }}
            <p><span style="color: red">*</span> Dit veld is verplicht</p>
            <div class="button-group">
                <button class="rounded px-4 py-3 text-white bg-green-500 inline-block" type="submit">Opslaan</button>
                <a class="rounded px-4 py-3 text-white bg-gray-500 inline-block" href="{{ path("admin_activity_show", { 'activity': activity.id }) }}">Annuleren</a>
