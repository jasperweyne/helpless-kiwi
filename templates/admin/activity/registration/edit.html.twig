{% extends 'admin/layout.html.twig' %}

{% if page_title is not defined %}
    {% set page_title = registration.person.canonical ?? 'Onbekend' ~ ' bewerken voor ' ~ registration.activity.name  %}
{% endif %}

{% block body %}
    <div class="form">
        {{ form_start(form) }}
            {{ form_widget(form) }}
            <div class="button-group">
                <button type="submit" class="button add icon">Verander</button>
                <a href="{{ path('admin_activity_show', { 'id': registration.activity.id }) }}">Annuleren</a>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}