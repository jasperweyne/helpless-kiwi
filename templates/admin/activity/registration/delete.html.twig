{% extends 'admin/layout.html.twig' %}

{% set page_title = registration.person.canonical ?? 'Onbekend' ~ ' afmelden voor ' ~ registration.activity.name  %}

{% block body %}
    <div class="form">
        {{ form_start(form) }}
        <div>
            <p>Weet je dit zeker?</p>
        </div>
        {{ form_widget(form) }}
            <div class="button-group">
                <button type="submit" class="rounded px-4 py-3 text-white bg-green-500 inline-block">Ja, meld af</button>
                <a href="{{ path('admin_activity_show', { 'id': registration.activity.id }) }}" class="rounded px-4 py-3 text-white bg-gray-500 inline-block">Annuleren</a>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
