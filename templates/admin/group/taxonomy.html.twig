{% extends 'admin/layout.html.twig' %}

{% if page_title is not defined %}
    {% set page_title = taxonomy.name %}
    
    {% block buttons %}
        <a href="{{ path('admin_group_show', { 'id': taxonomy.parent.id ?? null }) }}">Terug naar {{ taxonomy.parent.name ?? 'groepen' }} </a>
    {% endblock %}
{% endif %}

{% block body %}
    <div class="table">
        <table>
            <thead>
                <tr>
                    <th>Subcategorie</th>
                </tr>
            </thead>
            <tbody>
            {% for group in children %}
                <tr>
                    <td><a href="{{ path('admin_group_show', { 'id': group.id }) }}">{{ group.name }}</a></td>
                </tr>
            {% else %}
                <tr>
                    <td>Geen subcategorieen.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    {% if taxonomy.category %}
    <div class="table">
        <table>
            <thead>
                <tr>
                    <th>Instanties</th>
                </tr>
            </thead>
            <tbody>
            {% for group in instances %}
                <tr>
                    <td><a href="{{ path('admin_group_show', { 'id': group.id }) }}">{{ group.name }}</a></td>
                </tr>
            {% else %}
                <tr>
                    <td>Geen subcategorieen.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    {% else %}
    <div class="table">
        <table>
            <thead>
                <tr>
                    <th>Leden</th>
                </tr>
            </thead>
            <tbody>
            {% for relation in persons %}
                <tr>
                    <td>{{ relation.target.fullname }}</td>
                </tr>
            {% else %}
                <tr>
                    <td>Geen leden.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    {% endif %}
{% endblock %}