{% extends 'admin/layout.html.twig' %}

{% set page_title = 'Groep "' ~ group.name ~ '" verwijderen'  %}

{% block body %}
    <div class="form">
        {{ form_start(form) }}
        <div>
            <p>Weet je dit zeker?</p>
        </div>
        {{ form_widget(form) }}
            <div class="button-group">
                <button type="submit" class="rounded px-4 py-3 text-white bg-green-500 inline-block">Ja, verwijder</button>
                <a href="{{ path('admin_group_show', { 'group': group.id }) }}" class="rounded px-4 py-3 text-white bg-gray-500 inline-block">Annuleren</a>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
