{% extends 'admin/layout.html.twig' %}

{% if page_title is not defined %}
    {% set page_title = 'Accounts' %}
    
    {% block top %}
        {% embed 'admin/listview.html.twig' %}
            {% set resultcount = accounts|length %}

            {% block buttons %}
                <a href="{{ path("admin_security_new") }} ">Nieuw</a>
            {% endblock %}
        {% endembed %}
    {% endblock %}
{% endif %}

{% block body %}
    <div class="table">
        <table>
            <thead>
                <tr>
                    <th>E-mail</th>
                </tr>
            </thead>
            <tbody>
            {% for account in accounts %}
                <tr>
                    <td><a href="{{ path("admin_security_show", { 'id': account.id }) }}">{{ account.person.canonical }}</a></td>
                </tr>
            {% else %}
                <tr>
                    <td>Geen accounts.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
