{% extends 'admin/layout.html.twig' %}

{% if page_title is not defined %}
    {% set page_title = 'Accounts' %}
    
    {% block top %}
        {% embed 'admin/listview.html.twig' %}
            {% set resultcount = accounts|length %}

            {% block buttons %}
                <a href="{{ path("admin_security_new") }} ">Nieuw</a>
            {% endblock %}
        {% endembed %}
    {% endblock %}
{% endif %}

{% block body %}
    <div class="table">
        <table>
            <thead>
                <tr>
                    <th>Naam</th>
                    <th>E-mail</th>
                    <th>Administrator</th>
                    <th>{{ oidc ? 'Lokale login' : 'Geactiveerd' }}</th>
                    {% if oidc %}
                        <th>Externe login</th>
                    {% endif %}
                </tr>
            </thead>
            <tbody>
            {% for account in accounts|sort((a, b) => (a.canonical ?? '') <=> (b.canonical ?? '')) %}
                <tr>
                    <td><a href="{{ path("admin_security_show", { 'id': account.id }) }}">{{ account.canonical ?? '{onbekend}'}}</a></td>
                    <td>{{ account.email }}</td>
                    <td>{{ 'ROLE_ADMIN' in account.roles ? 'Ja' : 'Nee' }}</td>
                    <td>{{ account.password ? 'Ja' : 'Nee' }}</td>
                    {% if oidc %}
                        <td>{{ account.oidc ? 'Ja' : 'Nee' }}</td>
                    {% endif %}
                </tr>
            {% else %}
                <tr>
                    <td>Geen accounts.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
