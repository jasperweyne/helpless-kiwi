{% extends 'admin/layout.html.twig' %}

{% if page_title is not defined %}
    {% set page_title = 'Schemas' %}
    
    {% block buttons %}
    <a href="{{ path("admin_person_new") }} ">Nieuw</a>
    {% endblock %}
{% endif %}

{% block body_wrap %}
    <div class="tabs">
        <input type="radio" name="tabs" id="main" checked>
        <label for="main" class="tab">
            <span>Alle schema's</span>
        </label>
        <div class="panel">
            <div class="card">
                {% include 'admin/document/scheme/index/overview.html.twig' %}
            </div>
        </div>

        <input type="radio" name="tabs" id="schemes">
        <label for="schemes" class="tab">
            <span>Default schema types</span>
        </label>
        <div class="panel">
            <div class="card">
                {% include 'admin/document/scheme/index/defaults.html.twig' %}
            </div>
        </div>
    </div>
{% endblock %}