<div class="table">
    <table>
        <thead>
            <tr>
                <th>Schema naam</th>
                <th>Default schema</th>
                <th>Schematype</th>
            </tr>
        </thead>
        <tbody>
        {% for scheme in schemes|sort((a, b) => a.name <=> b.name ) %}
            <tr>
                <td><a href="{{ path("admin_document_scheme_show", { 'id': scheme.id }) }}">{{ scheme.name }}</a></td>
                <td><a href="{{ path("admin_document_scheme_default_show", { 'id': scheme.schemeDefault.id }) }}">{{ scheme.schemeDefault.name}}
                <td>{{ scheme.schemeDefault.schemeType }}</td>
            </tr>
        {% else %}
            <tr>
                <td>Geen schemas.</td>
            </tr>
        {% endfor %}
            <tr>
                <td><a href="{{ path('admin_document_scheme_new') }}">Schema toevoegen</a></td>
            </tr>
        </tbody>
    </table>
</div>