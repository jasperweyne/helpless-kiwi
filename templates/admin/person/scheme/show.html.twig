{% extends 'admin/layout.html.twig' %}

{% if page_title is not defined %}
    {% set page_title = 'Schema ' ~ scheme.name %}
    
    {% block buttons %}
        <a href="{{ path("admin_person_new_selected", { 'id': scheme.id }) }} ">Nieuwe persoon</a>
        <a href="{{ path('admin_person_scheme_edit', { 'id': scheme.id }) }}">Bewerken</a>
        <a href="{{ path('admin_person_scheme_delete', { 'id': scheme.id }) }}">Verwijderen</a>
        <a href="{{ path("admin_person_index") }} ">Terug</a>
    {% endblock %}
{% endif %}

{% block body_wrap %}
    <div class="tabs">
        <input type="radio" name="tabs" id="overview" checked>
        <label for="overview" class="tab">
            <span>Overzicht</span>
        </label>
        <div class="panel">
            <div class="card">
                {% include 'admin/person/scheme/show/overview.html.twig' %}
            </div>
        </div>

        <input type="radio" name="tabs" id="details">
        <label for="details" class="tab">
            <span>Details</span>
        </label>
        <div class="panel">
            <div class="card">
                {% include 'admin/person/scheme/show/details.html.twig' %}
            </div>
        </div>
    </div>
{% endblock %}