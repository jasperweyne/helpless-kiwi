{% extends 'admin/layout.html.twig' %}

{% if page_title is not defined %}
    {% set page_title = 'Personen' %}
    
    {% block buttons %}
    <a href="{{ path("admin_person_new") }} ">Nieuw</a>
    {% endblock %}
{% endif %}

{% block body_wrap %}
    <div class="tabs">
        <input type="radio" name="tabs" id="main" checked>
        <label for="main" class="tab">
            <span>Overzicht</span>
        </label>
        <div class="panel">
            <div class="card">
                {% include 'admin/person/index/overview.html.twig' %}
            </div>
        </div>
        
        <input type="radio" name="tabs" id="fields">
        <label for="fields" class="tab">
            <span>Velden</span>
        </label>
        <div class="panel">
            <div class="card">
                {% include 'admin/person/index/fields.html.twig' %}
            </div>
        </div>
        
        <input type="radio" name="tabs" id="advanced">
        <label for="advanced" class="tab">
            <span>Geavanceerd</span>
        </label>
        <div class="panel">
            <div class="card">
                {% include 'admin/person/index/advanced.html.twig' %}
            </div>
        </div>
    </div>
{% endblock %}