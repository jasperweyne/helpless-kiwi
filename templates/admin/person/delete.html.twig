{% extends 'admin/layout.html.twig' %}

{% set page_title = 'Persoon "' ~ person.canonical ~ '" verwijderen'  %}

{% block body %}
    <div class="form">
        {{ form_start(form) }}
        <div>
            <p>Weet je dit zeker?</p>
        </div>
        {{ form_widget(form) }}
            <div class="button-group">
                <button type="submit">Ja, verwijder</button>
                <a href="{{ path('admin_person_show', { 'id': person.id }) }}">Annuleren</a>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
