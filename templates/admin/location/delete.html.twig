{% extends 'admin/layout.html.twig' %}

{% set page_title = 'Locatie ' ~ location.address ~ ' verwijderen' %}

{% block body %}
    <div class="form">
        {{ form_start(form) }}
        <div>
            <p>Je staat op het punt een locatie te verwijderen. Hier is andere data aan gekoppeld, wat wil je hiermee doen?</p>
        </div>
        {{ form_widget(form) }}
            <div class="button-group">
                <button type="submit" class="rounded px-4 py-3 text-white bg-green-500 inline-block">Bevestig verwijderen</button>
                <a href="{{ path('admin_location_show', { 'location': location.id }) }}" class="rounded px-4 py-3 text-white bg-gray-500 inline-block">Annuleren</a>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
