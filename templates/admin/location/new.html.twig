{% extends 'admin/layout.html.twig' %}

{% if page_title is not defined %}
    {% set page_title = 'Nieuwe locatie' %}
{% endif %}

{% block body %}
    <div class="form">
        {{ form_start(form) }}
            {{ form_widget(form) }}
            <div class="button-group">
                <button type="submit" class="rounded px-4 py-3 text-white bg-green-500 inline-block">Toevoegen</button>
                <a href="{{ path('admin_location_index') }}" class="rounded px-4 py-3 text-white bg-gray-500 inline-block">Annuleren</a>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
