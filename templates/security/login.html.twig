{% extends 'layout.html.twig' %}

{% set page_title = 'Inloggen' %}

{% block body %}
<div class="container row">
    <form method="post" class="login">
        {% if app.user %}
            <span class="h3 mb-3 font-weight-normal">Log opnieuw in</span>
        {% else %}
            <span class="h3 mb-3 font-weight-normal">Inloggen</span>
        {% endif %}
        <label for="inputUsername" class="sr-only">E-mailadres</label>
        <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" placeholder="E-mailadres" required autofocus>
        <label for="inputPassword" class="sr-only">Wachtwoord</label>
        <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Wachtwoord" required>

        <input type="hidden" name="_csrf_token"
            value="{{ csrf_token('authenticate') }}"
        >

        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Onthoud mij
                </label>
            </div>
        #}

        <button class="btn btn-lg btn-primary" type="submit">
            Log in
        </button>
        {% if not app.user %}
            <a href="{{ path('password_request') }}">Wachtwoord vergeten</a>
        {% endif %}
        <a href="{{ path('app_login', { provider: 'bunny' }) }}">Log in met Bunny</a>
    </form>
</div>
{% endblock %}
